<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_alignParentStart="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_gravity="center"
        tools:text="18"
        android:id="@+id/tv_day"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        tools:text="May"
        android:layout_gravity="center"
        android:layout_below="@+id/tv_day"
        android:id="@+id/tv_month"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_month"
        android:src="@drawable/logo"
        android:id="@+id/iv_avatar"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/linear"
        app:cardCornerRadius="4dp"
        android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            tools:text="Title"
            android:id="@+id/tv_user_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            tools:text="post long text"
            android:layout_below="@+id/tv_user_name"
            android:id="@+id/tv_user_post"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time"
            tools:text="17:50"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/clockicon"
            android:layout_below="@+id/tv_user_post" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_comment"
            tools:text="3"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/chat"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_user_post" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_like"
            tools:text="3"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/vectorsmart"
            android:layout_toStartOf="@+id/tv_comment"
            android:layout_below="@+id/tv_user_post" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
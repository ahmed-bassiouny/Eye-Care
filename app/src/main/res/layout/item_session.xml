<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_session_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_session_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_session_time"
                android:drawableTint="@color/black"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_session_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_session_location"
                android:drawableTint="@color/black"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_session_speaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_session_interest"
                android:drawableTint="@color/black"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="dsadsadasdas"
                android:textColor="@color/black" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="3">

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_time"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_start_time"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tv_interested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:gravity="center"
        android:scaleX=".7"
        android:scaleY=".7"
        android:drawableStart="@drawable/ic_session_interest"
        app:layout_constraintLeft_toRightOf="@+id/tv_end_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/tv_interested"
        android:layout_marginLeft="8dp"
        android:scaleX=".8"
        android:gravity="center"
        android:scaleY=".8"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/vectorsmart"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tv_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/chat"
        android:gravity="center"
        android:scaleX=".7"
        android:scaleY=".7"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/tv_like"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:layout_marginStart="8dp" />
</android.support.constraint.ConstraintLayout>
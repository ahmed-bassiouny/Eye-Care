<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:text="09.00 AM" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/tv_start_time"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_name"
        android:gravity="center"
        android:text="09.00 AM" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_name"
        android:layout_toEndOf="@+id/tv_end_time"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_interested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_session_interest"
            android:gravity="center"
            android:scaleX=".7"
            android:scaleY=".7"
            android:text="0" />

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/vectorsmart"
            android:gravity="center"
            android:scaleX=".8"
            android:scaleY=".8"
            android:text="0" />

        <TextView
            android:id="@+id/tv_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/chat"
            android:scaleX=".7"
            android:scaleY=".7"
            android:text="0" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_end_time"
        android:background="@color/header" />
</RelativeLayout>
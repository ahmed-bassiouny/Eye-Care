<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="09.00 AM"
        android:layout_alignParentStart="true"/>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/tv_start_time"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="09.00 AM"
        android:layout_below="@+id/tv_name"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_name"
        android:gravity="center"
        android:layout_toEndOf="@+id/tv_end_time"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_interested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center"
        android:scaleX=".7"
        android:scaleY=".7"
        android:drawableStart="@drawable/ic_session_interest"/>
        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:scaleX=".8"
            android:gravity="center"
            android:scaleY=".8"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/vectorsmart" />
        <TextView
            android:id="@+id/tv_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/chat"
            android:scaleX=".7"

            android:drawablePadding="5dp"
            android:scaleY=".7"
            android:text="TextView" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_end_time"
        android:background="@color/header"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_session_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:drawablePadding="5dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_session_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_session_time"
                android:padding="5dp"
                android:drawablePadding="5dp"
                android:drawableTint="@color/black"
                android:gravity="center_vertical"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_session_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_session_location"
                android:drawableTint="@color/black"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:text="@string/main_meeeting_room"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_session_speaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_session_interest"
                android:padding="5dp"
                android:drawablePadding="5dp"
                android:drawableTint="@color/black"
                android:gravity="center_vertical"
                android:textColor="@color/black" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/header"/>
        </LinearLayout>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:id="@+id/iv_add_to_my_agenda"
        android:src="@drawable/calendar"/>
</RelativeLayout>